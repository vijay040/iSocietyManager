<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <include layout="@layout/toolbar"
        android:id="@+id/toolbar"/>
    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/_60sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/ic_visitor"
        android:layout_height="@dimen/_60sdp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/rounded_lay"
            android:layout_margin="@dimen/_15sdp"
            android:padding="@dimen/_10sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/date_issue"
                android:layout_width="wrap_content"
                android:text="@string/issue_date"
                android:layout_marginLeft="@dimen/_15sdp"
                android:textColor="@color/title_color"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/edtDate"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_38sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_weight="1"
                android:background="@color/white_color"
                android:clickable="false"
                android:focusable="false"
             android:editable="false"
                android:layout_marginLeft="@dimen/_10sdp"
                android:hint="@string/issue_date"
                android:paddingLeft="@dimen/_15sdp"
                android:singleLine="true"
                android:textColor="#6d6e71"
                android:textSize="@dimen/_11sdp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:background="@color/view_devider" />
    <EditText
        android:id="@+id/edt_visitor_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_38sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:background="@color/white_color"
        android:hint="@string/visitor_name"

        android:paddingLeft="@dimen/_15sdp"
        android:singleLine="true"
        android:textColor="#6d6e71"
        android:textSize="@dimen/_11sdp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:background="@color/view_devider" />
    <EditText
        android:id="@+id/edt_mobile"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_38sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:background="@color/white_color"
        android:inputType="number"
        android:hint="@string/mobile"
        android:maxLength="10"
        android:paddingLeft="@dimen/_15sdp"
        android:singleLine="true"
        android:textColor="#6d6e71"
        android:textSize="@dimen/_11sdp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:background="@color/view_devider" />
            <ProgressBar
                android:id="@+id/progress"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:visibility="gone"
                    android:layout_gravity="center"
                android:indeterminateDrawable="@drawable/progressbar"

                />

            <com.rengwuxian.materialedittext.MaterialAutoCompleteTextView
                android:id="@+id/edt_address"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_38sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:background="@color/white_color"
                android:layout_marginLeft="@dimen/_10sdp"
                android:drawableLeft="@drawable/ic_loc"
                android:drawablePadding="@dimen/_5sdp"
                android:hint="@string/add"
                android:paddingLeft="@dimen/_10sdp"
                android:singleLine="true"
                android:textColor="#6d6e71"
                android:textSize="@dimen/_11sdp" />

            <EditText
                android:id="@+id/edt_floor"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_38sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_weight="1"
                android:visibility="gone"
                android:background="@color/white_color"
                android:drawableRight="@drawable/dropdownyello"
                android:editable="false"
                android:hint="@string/select_floor"
                android:paddingLeft="@dimen/_15sdp"
                android:singleLine="true"
                android:textColor="#6d6e71"
                android:textSize="@dimen/_11sdp" />

            <EditText
                android:id="@+id/edt_unit_no"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_38sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_weight="1"
                android:background="@color/white_color"
                android:drawableRight="@drawable/dropdownyello"
                android:editable="false"
                android:hint="@string/select_unit"
                android:paddingLeft="@dimen/_15sdp"
                android:singleLine="true"
                android:textColor="#6d6e71"
                android:textSize="@dimen/_11sdp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:background="@color/view_devider" />
            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txt_time_in"
                    android:layout_width="wrap_content"
                    android:text="@string/time_in"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:textColor="@color/title_color"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/edt_time_in"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_38sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@color/white_color"
                    android:clickable="false"
                    android:drawableRight="@drawable/ic_clock"
                 android:layout_toRightOf="@+id/txt_time_in"
                    android:focusable="false"
                    android:hint="@string/time_in"
                   android:layout_marginLeft="@dimen/_10sdp"
                    android:singleLine="true"
                    android:textColor="#6d6e71"
                    android:textSize="@dimen/_11sdp" />

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:background="@color/view_devider" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txt_time_out"
                    android:layout_width="wrap_content"
                    android:text="@string/time_out"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:textColor="@color/title_color"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/edt_time_out"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_38sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@color/white_color"
                    android:clickable="false"
                    android:focusable="false"
                    android:layout_toRightOf="@+id/txt_time_out"
                    android:hint="@string/time_out"

                    android:layout_marginLeft="@dimen/_10sdp"
                    android:drawableRight="@drawable/ic_clock"
                    android:singleLine="true"
                    android:textColor="#6d6e71"
                    android:textSize="@dimen/_11sdp" />

            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:orientation="horizontal"

                android:weightSum="5">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_weight="2"
                    android:src="@drawable/ic_profile" />
                <Button
                    android:id="@+id/btn_take_photo"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_weight="3"
                    android:layout_gravity="center"
                    android:text="Take Photo" />
            </LinearLayout>


            <Button
        android:id="@+id/btn_save"
        android:layout_width="@dimen/_200sdp"
       android:layout_gravity="center"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="@string/submit"
        android:textColor="@color/white_color"
        android:background="@drawable/btn_back"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_height="wrap_content" />
        </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>









